extends base.pug

block content 
    h1 Change Title of video
    form(method="POST")
        input(name="title" placeholder="video Title" value=`${video.title}` required)
        input(name="description" placeholder="description" type="text" required value=`${video.description}`)
        input(name="hashtags" placeholder="Hashtags, separated by comma" type="text" required value=`${video.hashtags}`)
        input(value="Save" type="submit")
        